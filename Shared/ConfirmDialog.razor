@if (Visible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0, 0, 0, 0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header @HeaderColor text-white">
                    <h5 class="modal-title">
                        <i class="@Icono me-2"></i> @Titulo
                    </h5>
                </div>
                <div class="modal-body">
                    <p>@Mensaje</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="OnCancelar">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>
                    <button class="@BotonColor" @onclick="OnConfirmar">
                        <i class="@BotonIcono"></i> @TextoBoton
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Visible { get; set; }
    [Parameter] public string? Nombre { get; set; }
    [Parameter] public string Mensaje { get; set; } = "¿Estás seguro?";
    [Parameter] public string TextoBoton { get; set; } = "Confirmar";
    [Parameter] public string BotonColor { get; set; } = "btn-primary";
    [Parameter] public string BotonIcono { get; set; } = "bi bi-check-circle";
    [Parameter] public string Titulo { get; set; } = "Confirmación";
    [Parameter] public string HeaderColor { get; set; } = "bg-primary";
    [Parameter] public string Icono { get; set; } = "bi bi-question-circle";
    [Parameter] public EventCallback OnConfirmar { get; set; }
    [Parameter] public EventCallback OnCancelar { get; set; }
}



