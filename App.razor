@using ABSYS.Components.Layout
@using Microsoft.AspNetCore.Components.Routing

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="typeof(ABSYS.Components.Layout.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="typeof(ABSYS.Components.Layout.MainLayout)">
            <p>Lo sentimos, no se encontró la página.</p>
        </LayoutView>
    </NotFound>
</Router>




